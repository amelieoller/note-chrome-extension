{
	"name": "QuickNote",
	"version": "1.0",
	"description": "Take a quick note!",
	"permissions": ["activeTab", "declarativeContent", "storage"],
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/pen-16.png",
			"32": "images/pen-32.png",
			"48": "images/pen-48.png",
			"64": "images/pen-64.png"
		}
	},
	"icons": {
		"16": "images/pen-16.png",
		"32": "images/pen-32.png",
		"48": "images/pen-48.png",
		"64": "images/pen-64.png"
	},
	"manifest_version": 2
}